# ===========================================
# TandemDent - Environment Variables Template
# ===========================================
# Copy this file to .env.local and fill in your values

# Next.js
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ===========================================
# Appwrite Configuration
# ===========================================
NEXT_PUBLIC_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_PROJECT_ID=your-project-id
PROJECT_ID=your-project-id
API_KEY=your-api-key

# Database
DATABASE_ID=your-database-id

# Collections
PATIENT_COLLECTION_ID=your-patient-collection-id
DOCTOR_COLLECTION_ID=your-doctor-collection-id
APPOINTMENT_COLLECTION_ID=your-appointment-collection-id
SERVICE_COLLECTION_ID=your-service-collection-id
TREATMENT_COLLECTION_ID=your-treatment-collection-id

# Storage
NEXT_PUBLIC_BUCKET_ID=your-bucket-id

# ===========================================
# Google Calendar Integration
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/calendar/google/callback

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY=re_your-resend-api-key
EMAIL_FROM=Tandem Dent <appointments@tandemdent.com>

# ===========================================
# SMS (Twilio) - Optional
# ===========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# Admin Access
# ===========================================
ADMIN_PASSKEY=your-admin-passkey

# ===========================================
# Sentry (Optional - Error Tracking)
# ===========================================
# SENTRY_DSN=https://your-sentry-dsn
